{
  "expo": {
    "name": "nexrideappM",
    "slug": "nexrideappM",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "updates": {
      "url": "https://u.expo.dev/be09a5e8-b05e-4f20-8949-7132cb3cbe8e"
    },
    "sdkVersion": "54.0.0",
    "runtimeVersion": "1.0.0",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ertugrulbey.nexrideapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "NexRide needs microphone access for voice booking commands",
